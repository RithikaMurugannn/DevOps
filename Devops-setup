
   60  apt update -y
   61  # Add Docker's official GPG key:
   62  sudo apt update
   63  sudo apt install ca-certificates curl
   64  sudo install -m 0755 -d /etc/apt/keyrings
   65  sudo curl -fsSL https://download.docker.com/linux/ubuntu/gpg -o /etc/apt/keyrings/docker.asc
   66  sudo chmod a+r /etc/apt/keyrings/docker.asc
   67  # Add the repository to Apt sources:
   68  sudo tee /etc/apt/sources.list.d/docker.sources <<EOF
   69  Types: deb
   70  URIs: https://download.docker.com/linux/ubuntu
   71  Suites: $(. /etc/os-release && echo "${UBUNTU_CODENAME:-$VERSION_CODENAME}")
   72  Components: stable
   73  Signed-By: /etc/apt/keyrings/docker.asc
   74  EOF
   75  sudo apt update
   76  sudo apt install docker-ce docker-ce-cli containerd.io docker-buildx-plugin docker-compose-plugin
   77  docker --version
   78  service docker status
