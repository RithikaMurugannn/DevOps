# DOCKER VOLUMES:
       IT IS A EXTERNAL STORAGE MANAGED BY DOCKER TO PERSIST APP DATA


# NAMED VOLUME:
docker volume create ipl-volume
docker volume ls
docker inspect ipl-volume
cd /var/lib/docker/volumes
ls
cd ipl-volume/
ls
cd _data
ls
mkdir t-20wc
ls
cd t-20wc/
touch ind sa wi
ls
exit
docker ps
docker ps -a
docker rm -f ipl  #will remove the container but u can see the volumes

#then can check by this commands
cd /var/lib/docker/volumes
ls
cd ipl-volume/
ls
cd _data
ls
mkdir t-20wc
ls
cd t-20wc
exit

#BIND VOLUME:


mkdir ~/ipl-bind-volume
cd ~/ipl-bind-volume
exit
docker run -d --name ipl-2 -v ~/ipl-bind-volume:/app/uploads -p 4000:3000 muralisocial123/ipl:latest
docker ps
cd ~/ipl-bind-volume
touch app.js service.js index.html
