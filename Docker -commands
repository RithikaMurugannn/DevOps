# DOCKER VOLUMES:
      * IT IS A EXTERNAL STORAGE MANAGED BY DOCKER TO PERSIST APP DATA
      * IF U DLT THE CONTAINER THE VOLUMES WILL NOT BE DELETED
docker pull "repo"
docker run -it --name ipl -v /rithika17/ipl:latest/bin/bash
#it will show an root: ls
cd /rithika
pwd
touch web demo app
#ANONYMOUS VOLUME:
docker volume ls
#it will show one volume like d917af9c4909a847494db011a0422b0581e1464d3e452d9e06cde9659774e2c9
docker volume inspect d917af9c4909a847494db011a0422b0581e1464d3e452d9e06cde9659774e2c9
cd /var/lib/docker/volumes/
ls
cd d917af9c4909a847494db011a0422b0581e1464d3e452d9e06cde9659774e2c9
ls
cd _data
ls 
mkdir t-20wc
ls
cd t-20wc/
touch ind sa wi
ls
exit
docker ps
docker ps -a
docker rm -f ipl 


# NAMED VOLUME:
docker volume create ipl-volume
docker volume ls
docker inspect ipl-volume
cd /var/lib/docker/volumes
ls
cd ipl-volume/
ls
cd _data
ls
mkdir t-20wc
ls
cd t-20wc/
touch ind sa wi
ls
exit
docker ps
docker ps -a
docker rm -f ipl  #will remove the container but u can see the volumes

#then can check by this commands
cd /var/lib/docker/volumes
ls
cd ipl-volume/
ls
cd _data
ls
mkdir t-20wc
ls
cd t-20wc
exit

#BIND VOLUME:


mkdir ~/ipl-bind-volume
cd ~/ipl-bind-volume
exit
docker run -d --name ipl-2 -v ~/ipl-bind-volume:/app/uploads -p 4000:3000 rithika17/ipl:latest
docker ps
cd ~/ipl-bind-volume
touch app.js service.js index.html
